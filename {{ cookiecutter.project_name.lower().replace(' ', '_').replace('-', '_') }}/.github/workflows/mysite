name: publish site

on:
  push:
    branches:
      - main

jobs:
  deploy:
    # 创建一个 Ubuntu 容器
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Setup go-task
        uses: pnorton5432/setup-task@v1
        with:
          task-version: 3
      - run: task deploy_pages
